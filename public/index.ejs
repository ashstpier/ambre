<!doctype html>
<html lang="en" ng-app="ambre">
<head>
  <base href="/">
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <title>Ambre</title>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
  <link rel="stylesheet" href="stylesheets/main.css">

  <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>

  <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
  <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.5/angular.min.js"></script>
  <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.25/angular-route.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.7/angular-cookies.min.js"></script>

  <!-- controllers -->
  <script src="js/controllers/search/books.js"></script>
  <script src="js/controllers/search/songs.js"></script>

  <script src="js/controllers/user/userPlaylists.js"></script>
   <script src="js/controllers/users/usersPlaylists.js"></script>

  <script src="js/controllers/playlists/allPlaylists.js"></script>
  <script src="js/controllers/playlists/onePlaylist.js"></script>

  <script src="js/controllers/books/oneBook.js"></script>

  <!-- services -->
  <script src="js/services/service.js"></script>
  <!-- app -->
  <script src="js/controllers/main.js"></script>
  <script src="js/app.js"></script>

  <script src="//use.typekit.net/vfq8xgg.js"></script>
  <script>try{Typekit.load();}catch(e){}</script>

</head>
<body ng-controller="main">
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/#/">Bookmix</a>
      </div>

      <form ng-submit="searchBook()" class="navbar-form navbar-left" role="search">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search for books..." ng-model="search" autofocus>
          <span class="input-group-btn">
            <button ng-submit="searchBook()" class="btn btn-default" type="submit"><i class="fa fa-search fa-fw fa-lg"></i></button>
          </span>
        </div>
      </form>

      <ul class="nav navbar-nav navbar-right">
        <li id="offcanvas-button"><a ng-click="toggleNav()"><i class="fa fa-navicon fa-fw fa-lg"></i></a></li>
      </ul>
    </div>
  </nav>

  <div id="offcanvas">
    <h3><i class="fa fa-user fa-fw"></i> {{ user.name }}</h3>
    <ul>
      <li><a href="/#/user/playlists" ng-click="closeNav()"><i class="fa fa-music fa-fw"></i> My playlists <span class="badge pull-right">{{playlist_count}}</span></a></li>
      <li><a href="/#/" ng-click="closeNav()"><i class="fa fa-heart fa-fw"></i> Favourites <span class="badge pull-right">93</span></a></li>
      <li><a href="/logout" ng-click="closeNav()"><i class="fa fa-cog fa-fw"></i> Settings</a></li>
      <li><a href="/logout" ng-click="closeNav()"><i class="fa fa-power-off fa-fw"></i> Logout</a></li>
    </ul>
  </div>

  <div id="page" ng-click="closeNav()">
    <div ng-view></div>
  </div>
</body>
</html>